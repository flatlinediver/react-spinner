{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./lib/",
    "target": "es5",
    "noImplicitAny": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
    "files": [
    "src/index.tsx"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "src/setupTests.ts"]
}
